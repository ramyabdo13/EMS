@model EMS.Models.Question

<h4>Create a New Question</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" id="createQuestionForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Start Row for Two Columns -->
            <div class="row">
                <!-- Left Column (6 units wide) -->
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ExamId" class="control-label"></label>
                        <select asp-for="ExamId" class="form-control" asp-items="ViewBag.ExamId"></select>
                    </div>

                    <div class="form-group">
                        <label asp-for="QuestionContent" class="control-label"></label>
                        <input asp-for="QuestionContent" class="form-control" />
                        <span asp-validation-for="QuestionContent" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="QuestionType" class="control-label"></label>
                        <input asp-for="QuestionType" class="form-control" />
                        <span asp-validation-for="QuestionType" class="text-danger"></span>
                    </div>
                </div>

                <!-- Right Column (6 units wide) -->
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="QuestionMark" class="control-label"></label>
                        <input asp-for="QuestionMark" class="form-control" />
                        <span asp-validation-for="QuestionMark" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="NumberOfAnswers" class="control-label"></label>
                        <input asp-for="NumberOfAnswers" class="form-control" />
                        <span asp-validation-for="NumberOfAnswers" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>
            </div>
            <!-- End Row for Two Columns -->

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
